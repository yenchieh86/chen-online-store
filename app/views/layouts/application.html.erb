<!DOCTYPE html>
<html>
  <head>
    <title>OnlineStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class='container-fluid'>
        <div class='row'>
          <div class='logo'>
            <%= link_to image_tag("https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcTgzAsDTTWOlsX7cKfSVy9r6skIHikbx3V7eZxYg4aGe5wCmBUY", class: 'logo_img'), root_path %>
          </div>
          <nav>
            <ul class="nav navbar-nav">
                <% if current_user %>
                <li><%= link_to gravatar_image_tag(current_user.email), current_user %></li>
                <% end %>
              <li><%= link_to "Home", root_path, class: 'home' %></li>
              <li><%= link_to "Help", '#', class: 'help' %></li>
              <% if current_user %>
                <li><%= link_to "Log out", '#', class: 'logout' %></li>
              <% else %>
                <li><%= link_to 'Sign in', '#', class: 'signin' %></li>
                <li><%= link_to 'Sign up', '#', class: 'signout' %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <div class='container-fluid'>
      <% if alert %>
        <p><%= alert %></p>
      <% elsif notice %>
        <p><%= notice %></p>
      <% end %>
    </div>
    
      <%= yield %>
    
    <div class='container-fluid'>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
