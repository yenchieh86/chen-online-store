<%= render 'layouts/side_bar' %>
<div class='col-md-10 user_show_page'>
    <div class='row user_info_area'>
        <div class='col-md-6 user_img text-right'>
            <%= gravatar_image_tag(current_user.email, gravatar: { size: 235 } ) %>
        </div>
        <div class='col-md-6 text-left'>
            <h3>Name: <%= full_name(current_user) %></h3>
            <h3>Email: <%= current_user.email %></h3>
            <h3>Birthday: <%= current_user.birthday %></h3>
            <h3>Account status: <%= current_user.role %></h3>
            <%= link_to 'Set up account', edit_user_registration_path, class: 'btn btn-info' %>
            <%= link_to "Cancel account", user_registration_path, method: :delete, class: 'btn btn-danger' %>
        </div>
    </div>
    <div class='row btn_area'>
        <% if current_user.admin? %>
            <div class='col-md-2'>
                <%= link_to "All Users", users_path, class: 'btn btn-default' %>
            </div>
            <div class='col-md-2'>
                <%= link_to "Categories", categories_path, class: 'btn btn-default' %>
            </div>
            <div class='col-md-2'>
                <%= link_to "Products", user_items_path(current_user), class: 'btn btn-default' %>
            </div>
        <% end %>
        <div class='col-md-2'>
            <%= link_to "Order List", user_orders_path(current_user), class: 'btn btn-default' %>
        </div>
        <div class='col-md-2'>
            <%= link_to "Pay for Orders", new_user_charge_path(current_user), class: 'btn btn-default' %>
        </div>
    </div>
</div>