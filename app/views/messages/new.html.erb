<div class='messages_new'>
    <div class='row'>
        <div class='col-md-10 col-md-offset-1 text-center'>
            <h2>Please leave your questions, or suggestions.</h2>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-10 col-md-offset-1'>
            <%= bootstrap_form_for(@message) do |f| %>
                <%= f.text_field :title %>
                <%= f.text_area :body %>
                <%= f.submit %>
            <% end %>
        </div>
    </div>
</div>