<div class='item_form'>
    <%= bootstrap_form_for(@item) do |f| %>
        <div class='row'>
            <div class='col-md-10 col-md-offset-1'>
                <%= f.text_field :title, label: "Name of Product: " , autofocus: true %>
            </div>
        </div>
        <div class='row'>
            <div class='col-md-4 col-md-offset-1'>
                <%= f.select :category_id, @categories, { label: "Category: "}%> 
            </div>
            <div class='col-md-2'>
                <%= f.select :status, [['Off Shelf', 'off_shelf'], ['On Shelf', 'on_shelf'], ['Special Offer', 'special_offer']], { label: "Status: "}%> 
            </div>
            <div class='col-md-2'>
                <%= f.number_field :price, label: "Price: ", step: 0.01 %> 
            </div>
            <div class='col-md-2'>
                <%= f.number_field :quantity, label: "Quantity: " %>
            </div>
        </div>
        <div class='row'>
            <div id='photos'>
                <%= f.fields_for :photos do |photo| %>
                    <%= render 'photo_fields', f: photo %>
                <% end %>
            </div>
            <div class="links col-md-10 col-md-offset-1">
                <%= link_to_add_association 'add photo', f, :photos %>
            </div>
        </div>
        <div class='row'>
            <div class='col-md-10 col-md-offset-1'>
                <%= f.text_area :body, label: "Product's Informations: " %>
            </div>
        </div>
        <div class='row'>
            <div class='col-md-10 col-md-offset-1'>
                <%= f.submit "Submit" %>
                <%= link_to 'Back', url_for(:back), class: 'btn btn-default' %>
            </div>
        </div>
    <% end %>
</div>
